<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PasswordActivity"
    android:background="@drawable/profilbg">

    <TextView
        android:id="@+id/tv_ubahpass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ubah Password Akun Anda"
        android:layout_marginTop="20dp"
        android:textSize="25dp"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@color/white"/>



    <EditText
        android:id="@+id/et_oldpass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_ubahpass"
        android:text="Masukkan Password Lama Anda"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:textColor="@color/white"
        android:textColorHighlight="@color/white"
        android:backgroundTint="@color/white"/>

    <EditText
        android:id="@+id/et_newpass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_oldpass"
        android:text="Masukkan Password Baru Anda"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:textColor="@color/white"
        android:textColorHighlight="@color/white"
        android:backgroundTint="@color/white"/>

    <Button
        android:id="@+id/btnsimpanpass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_newpass"
        android:layout_marginTop="10dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:backgroundTint="@color/white"
        android:text="Simpan Password"
        android:textColor="@color/burgandy_100"/>


</RelativeLayout>