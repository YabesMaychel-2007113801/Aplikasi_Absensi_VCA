<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfilActivity"
    android:background="@drawable/profilbg">

    <LinearLayout
        android:id="@+id/atasprofil"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/profil"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/profilku" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Profil Anda"
            android:textColor="@color/white"
            android:textSize="30dp" />
    </LinearLayout>

        <TextView
            android:id="@+id/tv_nama"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="Nama"
            android:gravity="center"
            android:textSize="20dp"
            android:textColor="@color/burgandy"
            android:background="@color/white"
            android:layout_below="@id/atasprofil"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="15dp"/>

    <TextView
        android:id="@+id/tv_username"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="Username"
        android:gravity="center"
        android:textSize="20dp"
        android:textColor="@color/burgandy"
        android:background="@color/white"
        android:layout_below="@id/tv_nama"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="15dp"/>

    <TextView
        android:id="@+id/tv_departemen"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="Departemen"
        android:gravity="center"
        android:textSize="20dp"
        android:textColor="@color/burgandy"
        android:background="@color/white"
        android:layout_below="@id/tv_username"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="15dp"/>

    <Button
        android:id="@+id/btn_editprofil"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/tv_departemen"
        android:layout_marginTop="20dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:text="Edit Profil"
        android:textColor="@color/burgandy"
        android:backgroundTint="@color/white"/>

    <Button
        android:id="@+id/btn_editpass"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/btn_editprofil"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:text="Edit Password"
        android:textColor="@color/burgandy"
        android:backgroundTint="@color/white"/>





</RelativeLayout>