<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfilActivity"
    android:background="@drawable/profilbg">

    <LinearLayout
        android:id="@+id/atasprofil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginTop="125dp">

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile_image"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:layout_marginTop="24dp"
            android:src="@drawable/profile"
            app:civ_border_width="0dp"
            app:civ_border_color="#FF000000"/>

        <TextView
            android:id="@+id/tv_nama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama"
            android:gravity="center"
            android:layout_marginVertical="12dp"
            android:textStyle="bold"
            android:textSize="24dp"
            android:textColor="@color/white_100"
            android:layout_below="@id/atasprofil"/>

        <TextView
            android:id="@+id/tv_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Username"
            android:gravity="center"
            android:textSize="20dp"
            android:textColor="@color/white_100"
            android:layout_below="@id/tv_nama"/>

        <TextView
            android:id="@+id/tv_departemen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Departemen"
            android:gravity="center"
            android:textSize="20dp"
            android:textColor="@color/white_100"
            android:layout_below="@id/tv_username"/>

        <!--    <Button-->
        <!--        android:id="@+id/btn_editprofil"-->
        <!--        android:layout_width="match_parent"-->
        <!--        android:layout_height="50dp"-->
        <!--        android:layout_below="@id/atasprofil"-->
        <!--        android:layout_marginTop="20dp"-->
        <!--        android:layout_marginStart="30dp"-->
        <!--        android:layout_marginEnd="30dp"-->
        <!--        android:text="Edit Profil"-->
        <!--        android:textColor="@color/burgandy"-->
        <!--        android:backgroundTint="@color/white"/>-->

        <Button
            android:id="@+id/btn_editpass"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_below="@id/atasprofil"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="Edit Password"
            android:textColor="@color/burgandy"
            android:backgroundTint="@color/white"/>
    </LinearLayout>

</RelativeLayout>