<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RiwayatAbsensiActivity">

    <LinearLayout
        android:id="@+id/linlay_riwayat_atas"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical">

       <androidx.cardview.widget.CardView
           android:id="@+id/cw_atas"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:layout_marginTop="25dp"
           android:backgroundTint="@color/burgandy_100">

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:orientation="horizontal"
               android:layout_margin="5dp">

               <ImageView
                   android:layout_width="100dp"
                   android:layout_height="100dp"
                   android:layout_marginTop="30dp"
                   android:src="@drawable/ic_baseline_person_24"
                   />

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:orientation="vertical">

                   <TextView
                       android:id="@+id/tv_jenis"
                       android:layout_width="300dp"
                       android:layout_height="30dp"
                       android:text="Jenis Absensi"
                       android:textSize="20dp"
                       android:layout_marginStart="20dp"
                       android:layout_marginTop="10dp"
                       android:textColor="@color/white" />

                   <TextView
                       android:id="@+id/tv_tanggal"
                       android:layout_width="300dp"
                       android:layout_height="30dp"
                       android:text="Tanggal"
                       android:textSize="20dp"
                       android:layout_marginStart="20dp"
                       android:layout_marginTop="10dp"
                       android:textColor="@color/white"/>

                   <TextView
                       android:id="@+id/tv_waktu"
                       android:layout_width="300dp"
                       android:layout_height="30dp"
                       android:text="Waktu"
                       android:textSize="20dp"
                       android:layout_marginStart="20dp"
                       android:layout_marginTop="10dp"
                       android:textColor="@color/white"/>

                   <TextView
                       android:id="@+id/tv_lokasi"
                       android:layout_width="300dp"
                       android:layout_height="30dp"
                       android:text="Lokasi"
                       android:textSize="20dp"
                       android:layout_marginStart="20dp"
                       android:layout_marginTop="10dp"
                       android:textColor="@color/white"/>

               </LinearLayout>

           </LinearLayout>
       </androidx.cardview.widget.CardView>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/linlay_riwayat_tengah"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical"
        android:layout_below="@id/linlay_riwayat_atas">

        <androidx.cardview.widget.CardView
            android:id="@+id/cw_atas2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="25dp"
            android:backgroundTint="@color/burgandy_100">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_margin="5dp">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="30dp"
                    android:src="@drawable/ic_baseline_person_24"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_jenis2"
                        android:layout_width="300dp"
                        android:layout_height="30dp"
                        android:text="Jenis Absensi"
                        android:textSize="20dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/tv_tanggal2"
                        android:layout_width="300dp"
                        android:layout_height="30dp"
                        android:text="Tanggal"
                        android:textSize="20dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/white"/>

                    <TextView
                        android:id="@+id/tv_waktu2"
                        android:layout_width="300dp"
                        android:layout_height="30dp"
                        android:text="Waktu"
                        android:textSize="20dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/white"/>

                    <TextView
                        android:id="@+id/tv_lokasi2"
                        android:layout_width="300dp"
                        android:layout_height="30dp"
                        android:text="Lokasi"
                        android:textSize="20dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/white"/>

                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/linlay_riwayat_bawah"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical"
        android:layout_below="@id/linlay_riwayat_tengah">

        <androidx.cardview.widget.CardView
            android:id="@+id/cw_atas3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="25dp"
            android:backgroundTint="@color/burgandy_100">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_margin="5dp">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="30dp"
                    android:src="@drawable/ic_baseline_person_24"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_jenis3"
                        android:layout_width="300dp"
                        android:layout_height="30dp"
                        android:text="Jenis Absensi"
                        android:textSize="20dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/tv_tanggal3"
                        android:layout_width="300dp"
                        android:layout_height="30dp"
                        android:text="Tanggal"
                        android:textSize="20dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/white"/>

                    <TextView
                        android:id="@+id/tv_waktu3"
                        android:layout_width="300dp"
                        android:layout_height="30dp"
                        android:text="Waktu"
                        android:textSize="20dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/white"/>

                    <TextView
                        android:id="@+id/tv_lokasi3"
                        android:layout_width="300dp"
                        android:layout_height="30dp"
                        android:text="Lokasi"
                        android:textSize="20dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/white"/>

                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>


    </LinearLayout>

</RelativeLayout>